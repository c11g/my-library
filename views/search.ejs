<!DOCTYPE html>
<html lang="ko">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="./css/style.css">
  <title>Search :: MY LIBRARY</title>
</head>
<body>
<h1>Search</h1>
<a href="/">홈</a>
<form action="/search">
	<input type="hidden" name="start" value="<%= start %>">
	<input type="hidden" name="display" value="<%= display %>">
	<input type="text" name="keyword" value="<%= keyword %>">
	<button id="submit_button">검색</button>
	<hr>
	<p id="message"></p>
	<div>
	<% if (!keyword || total < 1) { %>
		<p ><%= message %></p >
	<% } else { %>
		<p>total <%= total %> / <%= current_page %>/<%= total_page %> page</p>
		<ul>
		<% books.forEach(book => { %>
			<li> <%- `${book.title}` %></li>
		<% }) %>
		</ul>
		<button type="button" id="prev_button">이전</button>
		<button type="button" id="next_button">다음</button>
	<% } %>
	</div>
</form>
<script>
	const form = document.forms[0],
		message_p = document.getElementById('message'),
		prev_button = document.getElementById('prev_button'),
		next_button = document.getElementById('next_button');
	
	let startValue = form.start.value,
		displayValue = form.display.value;
	
	const prevHandler = index => {
		let start = Number(index) - Number(displayValue);
		if ( start < 1 ) {
			message_p.textContent = '첫 페이지 입니다.';
			return;
		}
		form.start.value = start;
		form.submit();
	};

	const nextHandler = index => {
		let start = Number(index) + Number(displayValue);
		if ( start > 1000 ) {
			message_p.textContent = '1,000건 이상 검색할 수 없습니다. 검색어를 더 구체적으로 입력해주세요.';
			return;
		}
		form.start.value = start;
		form.submit();
	};
	
	submit_button.addEventListener('click', () => {
		form.start.value = 1;
	});
	if (prev_button) prev_button.addEventListener('click', _ => prevHandler(startValue));
	if (next_button) next_button.addEventListener('click', _ => nextHandler(startValue));
</script>
</body>
</html>